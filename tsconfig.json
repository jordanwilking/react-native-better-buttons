{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "target": "esnext",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "jsx": "react-native",
    "moduleResolution": "node",
    "types": ["react", "react-native", "node"],
    "removeComments": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
